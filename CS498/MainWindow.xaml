<Window x:Class="CS498.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="499" Width="939">

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Settings" />
                </MenuItem>
            </Menu>
        </Grid>
        <ToolBarTray Grid.Row="1">
            <ToolBar>
                <Button>TEST</Button>
            </ToolBar>
        </ToolBarTray>
        <Grid Margin="0,0,0,0" Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="100"/>
                <ColumnDefinition Width="2*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" BorderBrush="Gray" Height="Auto">
                <DockPanel Height="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Label HorizontalAlignment="Center">Task List</Label>
                        </Grid>
                        <ComboBox Name="TaskDates"  Grid.Row="1" Margin="8px"/>
                        <Grid Grid.Column="0" Grid.Row="2">
                            <ListBox Name ="TaskList" BorderThickness="0"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                HorizontalContentAlignment="Stretch" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Label Content="{Binding Name}" Grid.Row="0"/>
                                            <Label Content="{Binding Date}" Grid.Row="1" Padding="16px"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </DockPanel>
            </Border>
            <Grid Grid.Column ="1">
                <Border BorderThickness="1" BorderBrush="Gray" Height="Auto">
                    <DockPanel Height="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Margin="0,0,0,0" Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="84*"/>
                                    <ColumnDefinition Width="84*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="1" Content="Task Name" />
                                <TextBox Name="TaskName" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>

                                <Label Grid.Column="0" Grid.Row="3" Content="Description" />
                                <xctk:MultiLineTextEditor Name="Description" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>

                                <Label Grid.Column="0" Grid.Row="5" Content="Due Date" />
                                <xctk:DateTimePicker Grid.Column="1"
                                        Grid.Row="5"
                                        Grid.ColumnSpan="2"
                                        Name="DateTimePicker"
		                                Margin="0,0,0,10"
		                                VerticalAlignment="Bottom"/>

                                <Label Grid.Column="0" Grid.Row="7" Content="Time Needed" />
                                <xctk:IntegerUpDown Name="Hours" Grid.Row ="7" Grid.Column="1"  Minimum="0"/>
                                <xctk:IntegerUpDown Name="Minutes"  Grid.Row ="7" Grid.Column="2"  Maximum="45" Minimum="0" Increment="15"/>

                                <Button Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" Content="Save" Width="200" Margin="8px"></Button>
                            </Grid>

                            <Grid Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Content="Google Integration" HorizontalAlignment="Center"/>
                                <ComboBox Name="GoogleDate" Grid.Row="1" Margin="8px"/>

                                <ListBox Name ="GoogleList" BorderThickness="0"
                                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                                    HorizontalContentAlignment="Stretch"
                                    Grid.Row="2">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Name="CheckBox" Grid.Column="0" VerticalAlignment="Center"/>
                                                <Label Content="{Binding Date}" Grid.Column="1" Padding="16px"
                                                    VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
