<Window x:Class="CS498.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="423" Width="704">

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Settings" />
                </MenuItem>
            </Menu>
        </Grid>
        <ToolBarTray Grid.Row="1">
            <ToolBar>
                <Button>TEST</Button>
            </ToolBar>
        </ToolBarTray>
        <Grid Margin="0,0,0,0" Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="100"/>
                <ColumnDefinition Width="2*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" BorderBrush="Gray" Height="Auto">
                <DockPanel Height="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Label HorizontalAlignment="Center">Task List</Label>
                        </Grid>
                        <Grid Grid.Column="0" Grid.Row="1">
                            <ListBox Name ="TaskListView" BorderThickness="0">
                            </ListBox>
                        </Grid>
                    </Grid>
                </DockPanel>
            </Border>
            <Grid Grid.Column ="1">
                <Border BorderThickness="1" BorderBrush="Gray" Height="Auto">
                    <DockPanel Height="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Margin="0,0,0,0" Background="Transparent" Height="Auto" Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="84*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="26"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Task Name" />
                                <TextBox Name="TaskName" IsReadOnly="True" Grid.Column="1" Grid.Row="0"/>

                                <Label Grid.Column="0" Grid.Row="1" Content="Description" />
                                <TextBox Name="SuppArtist" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>

                                <Label Grid.Column="0" Grid.Row="2" Content="Date" />
                                <DatePicker Grid.Column="1"
                                        Grid.Row="2"
                                        HorizontalAlignment="Left"
		                                Margin="10,10,0,0"
		                                VerticalAlignment="Top"/>

                                <Label Grid.Column="0" Grid.Row="3" Content="Time Needed" />
                            </Grid>

                            <Grid Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="26"/>
                                    <RowDefinition Height="40*"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Google Integration" HorizontalAlignment="Center"/>
                                <Label Grid.Column="0" Grid.Row="1" Content="Date" HorizontalAlignment="Center"></Label>
                                <ComboBox
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    Name="Hours"
                                    HorizontalAlignment="Center"
                                    Margin="10,10,0,0"
	                                VerticalAlignment="Top"
	                                Width="200"
	                                Loaded="ComboBox_Loaded"/>

                                <Label Grid.Column="1" Grid.Row="1" Content="Time" HorizontalAlignment="Center"></Label>
                                <ComboBox
                                    Grid.Column="1"
                                    Grid.Row="2"
                                    Name="Days"
                                    HorizontalAlignment="Center"
                                    Margin="10,10,0,0"
	                                VerticalAlignment="Top"
	                                Width="200"/>

                                <Button Grid.Column="0" Grid.Row="3" Content="Save" Width="200" Margin="8px"></Button>
                                <Button Grid.Column="1" Grid.Row="3" Content="Cancel" Width="200" Margin="8px"></Button>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
